modules = ["nodejs-20", "php-8.2", "bash", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["sendgrid:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssh", "unzip", "php82Packages.composer"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 server.php"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[userenv]

[userenv.development]

[userenv.shared]
GA4_ENABLED = "false"
DB_CONNECTION = "pgsql"
